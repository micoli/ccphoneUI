<BorderPane cache="true" cacheHint="SPEED" mouseTransparent="false" prefHeight="200.0" prefWidth="600.0" styleClass="roundedWindow" xmlns:fx="http://javafx.com/fxml">
<center>
	<VBox prefHeight="200.0" prefWidth="100.0">
	<children>
		<HBox prefHeight="49.0" prefWidth="552.0">
		<children>
			<ImageView id="caller_pic" fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
			<HBox.margin>
				<Insets left="10.0" right="20.0" />
			</HBox.margin>
			</ImageView>
			<VBox alignment="CENTER_LEFT" prefHeight="64.0" prefWidth="434.0">
			<children>
				<Label fx:id="callerNum" text=".....">
				<font>
					<Font name="System Bold" size="20.0"/>
				</font>
				<textFill>
					<Color blue="0.625" green="0.625" red="0.625" />
				</textFill>
				<VBox.margin>
					<Insets bottom="5.0" top="5.0" />
				</VBox.margin>
				</Label>
				<Label fx:id="callerId" font="$x1" text="....." textFill="$x2" VBox.margin="$x3" />
			</children>
			</VBox>
		</children>
		<padding>
			<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
		</padding>
		</HBox>
		<TilePane alignment="CENTER" hgap="20.0" prefHeight="-1.0" prefWidth="-1.0" tileAlignment="CENTER" vgap="30.0">
		<children>
			<Button fx:id="answerButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" styleClass="roundedButton, colorGreen" text="answer" textAlignment="CENTER">
			<font>
				<Font name="System Bold" size="16.0" />
			</font>
			<textFill>
				<Color blue="0.250" green="0.250" red="0.250"  />
			</textFill>
			</Button>
			<Button fx:id="declineButton" font="$x4" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" styleClass="roundedButton, colorRed" text="decline" textAlignment="CENTER" textFill="$x5" />
		</children>
		</TilePane>
	</children>
	</VBox>
</center>
<stylesheets>
	<URL value="@roundedWindow.css" />
</stylesheets>
</BorderPane>
